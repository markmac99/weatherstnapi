[Unit]
Description=Get Weatherdata from MQ
After=network.target

[Service]
ExecStart=/home/pi/weather/frommq/getWeatherData.sh
ExecStop=/home/pi/weather/frommq/stopGW.sh
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

