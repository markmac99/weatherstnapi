[Unit]
Description=Get WH1080 data from Rtl433
After=network.target

[Service]
ExecStart=/home/pi/weather/runRtl433.sh
ExecStop=/home/pi/weather/stopRtl433.sh
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

